{
  "name": "@diagrammo/dgmo",
  "version": "0.2.2",
  "description": "DGMO diagram markup language â€” parser, renderer, and color system",
  "license": "MIT",
  "type": "module",
  "bin": {
    "dgmo": "dist/cli.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "gallery": "pnpm build && node scripts/generate-gallery.mjs"
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.6.2",
"d3-array": "^3.2.4",
    "d3-cloud": "^1.2.7",
    "d3-scale": "^4.0.2",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.2.0",
    "echarts": "^5.6.0",
    "jsdom": "^26.0.0"
  },
  "devDependencies": {
    "@types/d3-array": "^3.2.1",
    "@types/d3-cloud": "^1.2.9",
    "@types/d3-scale": "^4.0.8",
    "@types/d3-selection": "^3.0.11",
    "@types/d3-shape": "^3.1.7",
    "@types/jsdom": "^21.1.7",
    "tsup": "^8.5.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  }
